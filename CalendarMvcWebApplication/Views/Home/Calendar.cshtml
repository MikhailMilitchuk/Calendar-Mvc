@model CalendarMvcWebApplication.ViewModel.CalendarViewModel
<div class="calendar">
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th class="sub">
                <a asp-area="" asp-controller="Home" asp-action="Calendar" asp-route-id="1">Январь</a>
            </th>
            <th>
                <a asp-area="" asp-controller="Home" asp-action="Calendar" asp-route-id="2">Февраль</a>
            </th>
            <th>
                <a asp-area="" asp-controller="Home" asp-action="Calendar" asp-route-id="3">Март</a>
            </th>
            <th>
                <a asp-area="" asp-controller="Home" asp-action="Calendar" asp-route-id="4">Апрель</a>
            </th>
        </tr
        <tr>
            <th class="sub">
                <a asp-area="" asp-controller="Home" asp-action="Calendar" asp-route-id="5">Май</a>
            </th>
            <th>
                <a asp-area="" asp-controller="Home" asp-action="Calendar" asp-route-id="6">Июнь</a>
            </th>
            <th>
                <a asp-area="" asp-controller="Home" asp-action="Calendar" asp-route-id="7">Июль</a>
            </th>
            <th>
                <a asp-area="" asp-controller="Home" asp-action="Calendar" asp-route-id="8">Август</a>
            </th>
        </tr>
        <tr>
            <th class="sub">
                <a asp-area="" asp-controller="Home" asp-action="Calendar" asp-route-id="9">Сентябрь</a>
            </th>
            <th>
                <a asp-area="" asp-controller="Home" asp-action="Calendar" asp-route-id="10">Октябрь</a>
            </th>
            <th>
                <a asp-area="" asp-controller="Home" asp-action="Calendar" asp-route-id="11">Ноябрь</a>
            </th>
            <th>
                <a asp-area="" asp-controller="Home" asp-action="Calendar" asp-route-id="12">Декабрь</a>
            </th>
        </tr>
        </tr>
    </table>
    
    <button id="sendBtn" data-modal-id="modal-1" class="open-modal" style="font-size : 10px; width: 100%; height: 30px;">Добавить заметку</button>
    <div id="modal-1" class="modal">
        <span class="modal-close">
            <svg viewbox="0 0 40 40">
                <path class="close-x" d="M 10,10 L 30,30 M 30,10 L 10,30" />
            </svg>
        </span>
        <form asp-controller="Calendar" method="post">
            Время:
            <input class="form-control" type="datetime-local" data-val="true"
                    data-val-required="Введите время для напоминания."
                    id="Date" name="Date"><br>
            Заметка:
            <input class="form-control" type="text" data-val="true"
                    data-val-required="Введите текст заметки."
                    id="Name" name="Name"><br>
            <button class="form-control" type="submit">Записать</button>
        </form>
    </div>
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th>Пн</th>
            <th>Вт</th>
            <th>Ср</th>
            <th>Чт</th>
            <th>Пт</th>
            <th>Сб</th>
            <th>Вс</th>
        </tr>
        @for (int i = 0; i != this.Model.Days.GetLength(0); i++)
        {
            <tr>
                @for (int j = 0; j != this.Model.Days.GetLength(1); j++)
                {
                    <td>
                         @{
                            DateTime EventDate = Model.Days[i, j].Date;
                         }
                        @Html.Partial("_Day", this.Model.Days[i, j], new ViewDataDictionary(ViewData) { { "EventDay", EventDate.Date.ToString("dd MMMM") } })
                    </td>
                }
            </tr>
        }
    </table>
</div> 
<script src="~/js/signalr/dist/browser/signalr.min.js"></script>